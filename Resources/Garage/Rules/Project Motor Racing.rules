;;;-------------------------------------------------------------------------;;;
;;;                            Initialization                               ;;;
;;;-------------------------------------------------------------------------;;;

[?Initialize] => (Prove: addSimulator("Project Motor Racing")),
				 (Prove: addCharacteristics("Project Motor Racing", *, *, *)),
				 (Prove: addSettings("Project Motor Racing", *, *)),
				 (Prove: removeSettings("Project Motor Racing", *, [Bumpstop.Range.Front.Left, Bumpstop.Range.Front.Right,
																	Bumpstop.Range.Front.Left, Bumpstop.Range.Front.Right,
																	Bumpstop.Rate.Front.Left, Bumpstop.Rate.Front.Right,
																	Bumpstop.Rate.Rear.Left, Bumpstop.Rate.Rear.Right,
																	Geometry.Caster.Left, Geometry.Caster.Right,
																	Brake.Duct.Front, Brake.Duct.Rear,
																	Radiator.Blanket.Water, Radiator.Blanket.Oil,
																	Aero.Wing.Front.Left, Aero.Wing.Front.Right,
																	Aero.Wing.Rear.Left, Aero.Wing.Rear.Right,
																	Aero.Height.Front.Left, Aero.Height.Front.Right,
																	Aero.Height.Rear.Left, Aero.Height.Rear.Right]))


