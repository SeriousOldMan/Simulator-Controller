function Reasoning.RaiseEvent(raceAssistant, event, ...)
	local arguments = table.pack(...)
	
	return extern("raiseEvent")(raceAssistant, event, table.unpack(arguments))
end

function Reasoning.TriggerAction(raceAssistant, action, ...)
	local arguments = table.pack(...)
	
	return extern("triggerAction")(raceAssistant, action, table.unpack(arguments))
end